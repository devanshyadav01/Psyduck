# Backend API Configuration
VITE_API_URL=http://localhost:8000/api
VITE_WS_URL=ws://localhost:8000

# Environment
VITE_ENVIRONMENT=development

# Feature Flags
VITE_ENABLE_DEV_TOOLS=true
VITE_ENABLE_REAL_TIME=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_CODE_EXECUTION=true
VITE_ENABLE_SOCIAL_AUTH=false

# Mock API (automatically enabled in development when backend is not available)
VITE_USE_MOCK_API=true
VITE_ENABLE_MOCK_API=true

# Upload Configuration
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Monaco Editor Configuration
VITE_MONACO_CDN=https://unpkg.com/monaco-editor@latest/min/vs